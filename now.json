 
{
    "version": 2,
    "alias": "lilith.now.sh",
    "public": "true",
    "builds": [
        { 
            "src": "/main.js",
            "use": "@now/node"
        },
        { 
            "src": "/public/*",
            "use": "@now/static"
        }
    ],
    "routes": [
        { 
            "src": "/public/.*",
            "dest": "/main.js"
        },
        {
            "src": "/.*",
            "dest": "/main.js"
        }
    ]
  }